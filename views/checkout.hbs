<main class="py-5">
    <div class="container">
        <h1 class="mb-4">Checkout</h1>
        
        <div class="row">
            <div class="col-lg-7 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header text-white">
                        <h5 class="mb-0">Shopping Cart</h5>
                    </div>
                    <div class="card-body" id="cart-items">
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="card shadow-sm mb-4">
                    <div class="card-header text-white">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span id="subtotal">0₴</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span id="shipping">Free</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax (5%):</span>
                            <span id="tax">0₴</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Total:</strong>
                            <strong id="total" class="text-primary">0₴</strong>
                        </div>
                    </div>
                </div>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form name="checkout" id="user-checkout">
                            <h5 class="mb-3">Delivery Details</h5>
                            
                            <div class="mb-3">
                                <label for="getFirstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="getFirstName" name="firstname" value="John" required>
                            </div>

                            <div class="mb-3">
                                <label for="getLastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="getLastName" name="lastname" value="Doe" required>
                            </div>

                            <div class="mb-3">
                                <label for="getAddress1" class="form-label">Address Line 1</label>
                                <input type="text" class="form-control" id="getAddress1" name="address1" value="Street address" required>
                            </div>

                            <div class="mb-3">
                                <label for="getAddress2" class="form-label">Address Line 2</label>
                                <input type="text" class="form-control" id="getAddress2" name="address2" value="Apartment, suite, etc.">
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="getCity" class="form-label">City</label>
                                    <input type="text" class="form-control" id="getCity" name="city" value="City" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="getPostcode" class="form-label">Postcode</label>
                                    <input type="text" class="form-control" id="getPostcode" name="postcode" value="12345" required>
                                </div>
                            </div>
                            <h5 class="mb-3 mt-4">Payment Details</h5>

                            <div class="mb-3">
                                <label for="cardName" class="form-label">Cardholder Name</label>
                                <input type="text" class="form-control" id="cardName" name="cardname" value="Name on card" required>
                            </div>

                            <div class="mb-3">
                                <label for="cardNumber" class="form-label">Card Number</label>
                                <input type="text" class="form-control" id="cardNumber" name="cardNumber" value="1234 5678 9102 3456" maxlength="19" required>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="cardExpiry" class="form-label">Expiry Date</label>
                                    <input type="text" class="form-control" id="cardExpiry" name="cardExpiry" value="MM/YY" maxlength="5" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="cardCvv" class="form-label">CVV</label>
                                    <input type="password" class="form-control" id="cardCvv" name="cardCvv" maxlength="3" required>
                                </div>
                            </div>
                            <div class="alert alert-success d-none" id="payment-success" role="alert">
                                <h5 class="alert-heading">Payment Successful!</h5>
                                <p>Thank you for your purchase. You will receive delivery details via email.</p>
                                <hr>
                                <p class="mb-0">Please return to our <a href="/" class="alert-link">Shopping Page</a>.</p>
                            </div>

                            <div class="alert alert-danger d-none" id="payment-failure" role="alert">
                                <strong>Payment Failed!</strong> There seems to be a problem with the card details you entered. Please try again.
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg" id="buy-now">
                                    Complete Purchase
                                </button>
                            </div>

                            <p class="text-muted text-center mt-3 small">
                                <i class="fas fa-lock"></i> Your payment information is secure
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="custom-js/checkout.js"></script>