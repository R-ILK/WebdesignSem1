<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary mb-3">Welcome Back</h1>
                <p class="lead text-muted">Sign in to your account to continue</p>
            </div>
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white py-4">
                    <h2 class="h4 mb-0 text-center"><i class="fa-solid fa-right-to-bracket me-2"></i>Login to Your Account</h2>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    <div class="alert alert-danger d-flex align-items-center mb-4 d-none" id="loginerror" role="alert" style="display: none;">
                        <i class="fa-solid fa-triangle-exclamation fs-4 me-3"></i>
                        <div>
                            <strong>Login Failed</strong>
                            <p class="mb-0">The email or password you entered is incorrect. <a href="#" class="alert-link">Forgot your password?</a></p>
                        </div>
                    </div>
                    <form name="login" id="user-login" method="get">
                        <div class="form-group mb-4">
                            <label for="emailAddressID" class="form-label fw-semibold">
                                <i class="fa-solid fa-envelope me-2"></i>Email Address
                            </label>
                            <input type="email" class="form-control form-control-lg" id="emailAddressID" name="email" 
                                   value="wmitty@email.com" required placeholder="Enter your email address">
                            <div class="form-text">Enter the email associated with your account</div>
                        </div>
                        <div class="form-group mb-4">
                            <label for="passwordID" class="form-label fw-semibold">
                                <i class="fa-solid fa-lock me-2"></i>Password
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" id="passwordID" name="password" 
                                       value="password1" required placeholder="Enter your password">
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fa-solid fa-eye"></i>
                                </button>
                            </div>
                            <div class="form-text">
                                <a href="#" class="text-decoration-none">Forgot your password?</a>
                            </div>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Remember me on this device
                            </label>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg py-3">
                                <i class="fa-solid fa-sign-in-alt me-2"></i>Login to Account
                            </button>
                        </div>
                    </form>
                    <div class="position-relative my-4">
                        <hr>
                        <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">or</span>
                    </div>
                    <div class="text-center mt-4">
                        <p class="mb-2">Don't have an account yet?</p>
                        <a href="#" class="btn btn-outline-primary btn-lg px-5">
                            <i class="fa-solid fa-user-plus me-2"></i>Create New Account
                        </a>
                    </div>
                </div>
                <div class="card-footer bg-light py-3 text-center">
                    <small class="text-muted">
                        <i class="fa-solid fa-shield-alt me-1"></i>
                        Your login information is encrypted and secure
                    </small>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="custom-js/login.js"></script>