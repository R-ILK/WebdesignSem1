<main>
    <div class="container mt-4 text-center">
        <h1 >Welcome!</h1>
        <h2>Best Offers</h2>
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="images/PosterM.png" alt="Slide with medieval collection">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="images/PosterK.png" alt="Slide with sovok collection">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="images/PosterA.png" alt="Slide with american dollar">
                    </div>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" style="filter: invert(1);" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>

                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" style="filter: invert(1);" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>

    <div class="container mt-5 text-center">
        <h2>New Products</h2>
        <div class="row align-items-center">
            <div class="col-auto">
                <button class="btn btn-link d-none d-md-block" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true" style="filter: invert(1);"></span>
                </button>
                <button class="btn btn-link d-md-none" type="button" data-bs-target="#productCarouselMobile" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true" style="filter: invert(1);"></span>
                </button>
            </div>

            <div class="col">
                <div id="productCarousel" class="carousel slide d-none d-md-block" data-bs-ride="false">
                    <div class="carousel-inner">
                    </div>
                </div>
            
                <div id="productCarouselMobile" class="carousel slide d-md-none" data-bs-ride="false">
                    <div class="carousel-inner">
                    </div>
                </div>
            </div>

            <div class="col-auto">
                <button class="btn btn-link d-none d-md-block" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true" style="filter: invert(1);"></span>
                </button>
                <button class="btn btn-link d-md-none" type="button" data-bs-target="#productCarouselMobile" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true" style="filter: invert(1);"></span>
                </button>
            </div>
        </div>
    </div>
</main>
<script src="custom-js/productsCommon.js"></script>
<script src="custom-js/newproducts.js"></script>